{
  "compilerOptions": {
    "declaration": false,
    "moduleResolution": "node",

    "target": "ESNext",
    "module": "ESNext",
    "lib": ["es2022", "dom"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
  },
  "include": ["src"]
}
